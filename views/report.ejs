<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles.css" />

    <title>UFO SIGHTING REPORT</title>
  </head>
  <body>
    <nav class="navbar bg-dark fixed-top text-h1">
      <a class="m-auto" href="/sighting-report">Report</a>
      <a class="m-auto" href="/">Sightings</a>
      <a class="m-auto" href="/shape">Shapes</a>
    </nav>

    <div
      style="height: 100vh"
      class="d-flex flex-row align-items-center justify-content-center"
    >
      <form action="/sighting-report" method="POST">
        <h2 class="text-light text-center">REPORT</h2>
        <label for="date_time">Date & Time:</label><br />
        <input
          class="text-center"
          type="text"
          id="date_time"
          name="date_time"
          placeholder="DD/MM/YY HH:MM"
        /><br />
        <label for="observation">Observation:</label><br />
        <input type="text" id="observation" name="observation" /><br />
        <label for="city">City:</label><br />
        <input type="text" id="city" name="city" /><br />
        <label for="state">State:</label><br />
        <input type="text" id="state" name="state" /><br />
        <label for="shape">Shape:</label><br />
        <input type="text" id="shape" name="shape" /><br />
        <label for="duration">Duration:</label><br />
        <input type="text" id="duration" name="duration" /><br />
        <label for="summary">Summary:</label><br />
        <input type="text" id="summary" name="summary" /><br /><br />
        <div class="d-flex justify-content-center">
          <input type="submit" value="Submit" />
        </div>
      </form>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>
</html>
