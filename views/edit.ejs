<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles.css" />
    <title>UFO SIGHTING REPORT</title>
  </head>
  <body>
    <nav class="navbar bg-dark fixed-top text-h1">
      <a class="m-auto text-light" href="/sighting-report">Report</a>

      <a class="m-auto text-light" href="/">Sightings</a>
      <a class="m-auto text-light" href="/shape">Shapes</a>
    </nav>

    <div
      style="height: 100vh"
      class="d-flex flex-row align-items-center justify-content-center"
    >
      <form
        action="/sighting/<%= sightingInfo.index %>/edit/?_method=PUT"
        method="POST"
      >
        <h2 class="text-light text-center">REPORT</h2>
        <label for="date_time">Date & Time:</label><br />
        <input
          class="text-center w-100"
          type="text"
          id="date_time"
          name="date_time"
          placeholder="DD/MM/YY HH:MM"
          value="<%=sightingInfo.date_time%>"
        /><br />
        <label for="observation">Observation:</label><br />
        <textarea name="observation" id="observation" cols="30" rows="10">
<%=sightingInfo.observation%></textarea
        >
        <br />
        <label for="city">City:</label><br />
        <input
          class="w-100"
          type="text"
          id="city"
          name="city"
          value="<%=sightingInfo.city%>"
        /><br />
        <label for="state">State:</label><br />
        <input
          class="w-100"
          type="text"
          id="state"
          name="state"
          value="<%=sightingInfo.state%>"
        /><br />
        <label for="shape">Shape:</label><br />
        <input
          class="w-100"
          type="text"
          id="shape"
          name="shape"
          value="<%=sightingInfo.shape%>"
        /><br />
        <label for="duration">Duration:</label><br />
        <input
          class="w-100"
          type="text"
          id="duration"
          name="duration"
          value="<%=sightingInfo.duration%>"
        /><br />
        <label for="summary">Summary:</label><br />
        <textarea name="summary" id="summary" cols="30" rows="4">
<%=sightingInfo.summary%></textarea
        >
        <br /><br />
        <div class="d-flex justify-content-center">
          <input type="submit" value="Submit" />
          <form
            action="/sighting/<%=sightingInfo.index%>?_method=DELETE"
            method="POST"
          >
            <input
              type="submit"
              value="Delete"
              class="button"
              onclick="return confirm('Are you sure you want to permanently delete this sighting report?');"
            />
          </form>
        </div>
      </form>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>
</html>
